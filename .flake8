[flake8]
max-line-length = 88
extend-ignore = E203, W503
max-complexity = 12
select = C,E,F,W,B,ANN,D  # include annotations and docstring checks (ANN from flake8-annotations, D from flake8-docstrings)
per-file-ignores =
    tests/*: F401,F841,E402
exclude = .venv,venv,build,dist,__pycache__,htmlcov
